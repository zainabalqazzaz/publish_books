
<% if user_signed_in? %>
 welcome: <%=current_user.first_name %><br>
 user email: <%=current_user.email %>
<% end %>

<div style="margin-bottom: 20px;">
  <%= button_to 'Create a New User', new_user_path, method: :get, class: 'btn btn-primary' %>
</div>

<div class="users-container">
  <% @users.each do |user| %>
    <div class="user-card">
      <p><strong>Full Name:</strong> <%= user.full_name %></p>
      
      <div class="user-actions">

        <%= button_to 'View User Details', "/users/#{user.id}", method: :get, class: 'btn btn-info' %>
        <%= button_to 'Update User', edit_user_path(user), method: :get, class: 'btn btn-warning' %>
        <%= button_to 'Delete User', "/users/#{user.id}", method: :delete, data: { confirm: "Are you sure you want to delete this user?" }, class: 'btn btn-danger' %>
      </div>
    </div>
  <% end %>
</div>

<% if user_signed_in? %>
  <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
<% end %>